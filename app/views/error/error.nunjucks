{# Root HTML template for all error pages #}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Debug</title>

</head>
<body>

<h1>{$ title $}</h1>
<h2>{$ error.status $}</h2>
<pre>{$ error.type $}</pre>
<pre>{$ error.message $}</pre>
<pre>{$ error.stack $}</pre>

</body>
</html>

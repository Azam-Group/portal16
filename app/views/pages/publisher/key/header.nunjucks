<div class="horizontal-stripe article-header white-background">
    <div class="container">
        <div class="row">
            <header class="col-xs-12">
                <nav class="article-header__category article-header__category--deep">
                    <span class="article-header__category__upper">{$ __('stdTerms.publisher') $}</span>
                    <span class="article-header__category__lower">
                        {$ publisher.record.created | formatDate(gb.locales.current) $}
                    </span>
                </nav>

                <h1>
                    <span>{$ publisher.record.title $}</span>
                </h1>
            </header>
        </div>

        {% if publisher.record.modified %}
        <div class="stripe-comment">
            <div>
                Modified
                {$ publisher.record.modified | formatDate(gb.locales.current) $}
            </div>
        </div>
        {% endif %}

        <div class="text-center">

            {% if publisher.record.homepage | isDefined %}
                {% for homepage in publisher.record.homepage %}
                        <a href="{$ homepage $}" class="gb-button--brand">{$ homepage | reduceUrlToDomain $}</a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
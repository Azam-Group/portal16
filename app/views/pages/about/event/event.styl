.event {
    &__subtitle {
        >span {
            margin 0 10px
        }
    }
}

.article-header.horizontal-stripe {
    padding-bottom 2.142857142855rem
}

.article-header__button {
    margin 20px
}

.article-header__highlights {
    >div{
        >span {
            padding-right 5px
        }
        display inline-block
        margin 0 10px
    }
}

.inline-document-list {
    list-style none
    padding-left 0
    display flex
    flex-wrap wrap
    margin -10px
    >li {
        flex 1 1 auto
        width 40%
        min-width 300px
        display inline-block
        //box-shadow 0 2px 2px 2px rgba(0, 0, 0, 0.16)
        //margin 10px
        font-size 14px
        margin-bottom 20px
        >a {
            display block
            position relative
            height 72px
            padding 10px
            img {
                position absolute
                top 10px
                left 10px
            }
            >div {
                vertically-align()
                margin-left 70px
            }
        }
    }
}


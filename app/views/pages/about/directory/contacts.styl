.contacts-nav__wrapper {
    .contacts-nav {
        display none
    }
}

+isAbove($laptop) {
    .contacts-nav__wrapper {
        float left
        position relative

        .contacts-nav {
            display block

            .nav-chapters {
                padding 8px 20px 15px
                height 100%
            }
            .nav-chapter {
                position relative
                margin-left 6px
                padding 0 0 8px
                a {
                    padding-left 10px
                    margin-left -10px
                    display block
                    line-height 1rem
                    border-left 2px solid transparent
                    color inherit
                }
                &.active {
                    a {
                        border-left 2px solid grey
                    }
                }
            }
            .h4 {
                margin-bottom 0
            }
        }
        .contacts-nav--bottom {
            top auto
            bottom 0
        }
        .contacts-nav--fixed {
            position fixed
            top $navBar_height
        }
    }
}

+isAbove($tablet) {
    .contacts__table {
        font-size 13px
        th {
            font-weight bold
        }
        .table-container--contacts {
            margin 0 auto
        }
        .table {
            > tbody {
                > td {
                    
                }
                > tr:nth-of-type(even) {
                    background alpha($alternativeTableRow, 1)
                }
                > tr:hover {
                    background darken($lightBackground, 5)
                }
            }
        }
        
        .nested {
            > thead {
                > tr {
                    border-bottom 1 solid grey
                }
            }
        }
        
    }
}

+isAbove(900px) {
}

.contacts__item {
    position relative
    address {
        margin-bottom 5px
    }
    > address, > i {
        position relative
    }
    > i {
        font-size 60px
        margin-right 20px
        float none
        position absolute
        color #ededed
        top 0
        right 0
    }
    .contact__heading {
        cursor pointer
    }
    .contact__body {
        overflow-y hidden
        max-height 0 /* approximate max height */
        transition-property all
        transition-duration .5s
        transition-timing-function cubic-bezier(0, 1, 0.5, 1)
        margin-bottom 5px
    }
    .contact__body.contact--show {
        max-height 120px
    }
}

.contact {
    &__mail, &__phone {
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        width 100%
        display inline-block
        float left
    }
}
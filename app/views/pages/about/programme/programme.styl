.list-links--programme-resources {
    list-style none
    padding-left vrBlock(1)
}

.funders {
    display inline-block
    img {
        height vrBlock(1.5)
        display inline-block
        margin 0 5px
    }
    h5 {
        display inline-block
    }
}

+isAbove($tablet) {
    .funders-lead {
        display inline
    }
}

.projects__table {
    >div {
        margin 0 auto
    }

    .projects__table__area {
        position relative
        overflow hidden
        width 100%
    }
    .table {
        font-size 13px
        tr, td {
            a {
                color inherit
                padding-right 1em
                display block
                &:hover {
                    text-decoration none
                }
            }
        }
        th {
            font-weight bold
            white-space nowrap
            a {
                display inline-block
                padding-right 0
                white-space normal
            }
            div {
                display inline-block
                font-size 18px
                width 18px
                margin-top -8px
                vertical-align middle
            }
        }
        tbody {
            tr {
                cursor pointer
            }
            tr:nth-of-type(even) {
                background lighten($lightBackground, 2)
            }
            tr:hover {
                background darken($lightBackground, 5)
            }
        }
        .currency-allocated {
            text-align right
        }
        .currency-estimated {
            text-align right
        }
    }
}

+isBelow(900px) {
    .projects__table {
        .table {
            thead tr {
                th:nth-of-type(4) {
                    a {
                        width 55px
                    }
                }
                th:nth-of-type(5) {
                    a {
                        width 45px
                    }
                }
            }
        }
    }
}
+isAbove(900px) {
    .projects__table {
        .table {
            thead tr {
                th:nth-of-type(4) {
                    width 135px
                }
                th:nth-of-type(5) {
                    width 120px
                }
            }
            tbody tr {
                td:nth-of-type(4) {
                    padding-right 22px
                }
                td:nth-of-type(5) {
                    padding-right 22px
                }
            }
        }
    }
}
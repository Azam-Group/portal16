img {
    max-width: 100%;
}

code {
    font-size: 80%;
}

.wrapper {
    lost-center: 960px;
}

.wrapper-container {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;

    -webkit-flex-flow: row wrap;
    flex-flow: row wrap;

    > section {
        margin-left: 6%;
    }
    > .sidebar {
        margin-right: 6%;
    }
}

.wrapper > * {
    padding: 10px;
    flex: 1 auto;
}

.main {
    text-align: left;
    overflow: hidden;
}

.masthead-image {
    figcaption {
        font-size: 0.8em;
    }
}

header {
    h1 {
        text-align center;
    }
    nav {
        text-align: center;
    }
}

@media all and (min-width: 600px) {
    .sidebar { flex: 1 auto; lost-column: 1/3; }
}

@media all and (min-width: 800px) {
    .main    { flex: 3 0px; }
    .main    { order: 1; }
    .sidebar { order: 2; lost-column: 1/3; }
    .footer  { order: 4; }
}

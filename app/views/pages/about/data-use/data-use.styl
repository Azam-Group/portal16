}

.prose {
	font-size 16px
}
+isAbove($laptop){
	.textContent {
		columns 2 30px
		text-align justify
		.noBreak {
			break-inside avoid-column
		}
	}
}
+isBelow($laptop){
	.textContent {
		margin 0 auto
		max-width 700px
	}
}

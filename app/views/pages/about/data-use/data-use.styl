.stripes {
	.stripes__content {
		background #f7f9fa
		max-width 1300px
		margin 0 auto
	}

	.block {
		border 1px solid #dbe3e7
		border-width 0 0 1px 0
		background white
		&.bare {
			background none
		}
		.blockContent {
			color #4E565F
			margin vr-block(1) auto
			max-width 1000px
		}
	}
	.coverImg {
		height 0
		padding-bottom 30%
		background #f7f9fa
		overflow hidden
		background-size cover
		background-position center
		img {
			display none
		}
	}
	.prose figure {
		margin auto
		max-width 500px
		.articleImg {
			padding-bottom 60%
		}
	}

	.headerImage, .prose {
		figcaption {
			max-width 1000px
			margin auto
			color #aaa
			font-size 12px
			font-weight 300
			> div, > div > p {
				display inline
			}
		}
	}

	$articleCategorySeperatorSpacing = 5px
	.article__category {
		margin vr-block(0.5) auto -(vr-block(0.5)) auto
		text-align center
		text-transform: uppercase
		font-weight bold
		>span:last-of-type {
			font-weight normal
		}
		.article__category__lower {
			border-left 2px solid $OrangePeel
			margin-left $articleCategorySeperatorSpacing
			padding-left $articleCategorySeperatorSpacing
		}
		&.article__category-deep {
			text-align left
			.article__category__upper {
				display inline-block
				width s('calc(50% - %s)', $articleCategorySeperatorSpacing)
				text-align right
			}
		}
	}
}


.article__header {
	h1 {
		margin-bottom vr-block(1)
	}
	.intro {
		font-size 1.2rem
		font-style italic
		font-family $caslon
		max-width 700px
		margin 0 auto vr-block(0.5)
	}
	.meta {
		font-weight bold
	}
}
.article {
	.textContent {
		//margin-top vr-block(1)

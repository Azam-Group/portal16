.stripes {
	.stripes__content {
		background #f7f9fa
		max-width 1300px
		margin 0 auto
	}

	section {
		background white
		&.bare {
			background none
			border 1px solid #dbe3e7
			border-width 1px 0
		}
		.blockContent {
			color #4E565F
			margin vr-block(1) auto
			max-width 1000px
		}
	}
	.coverImg {
		height 0
		padding-bottom 30%
		background #f7f9fa
		overflow hidden
		background-size cover
		background-position center
		img {
			display none
		}
	}

	figcaption {
		//TODO what to do with license on full width images. overlay?
		display none
		border-bottom 1px solid #ddd
		padding .5rem
		max-width 700px
		margin auto
		color #aaa
		font-size 12px
		font-weight 300
	}

	$articleCategorySeperatorSpacing = 5px
	.article__category {
		margin vr-block(0.5) auto -(vr-block(0.5)) auto
		text-align center
		text-transform: uppercase
		font-weight bold
		>span:last-of-type {
			font-weight normal
		}
		.article__category__lower {
			border-left 2px solid $OrangePeel
			margin-left $articleCategorySeperatorSpacing
			padding-left $articleCategorySeperatorSpacing
		}
		&.article__category-deep {
			text-align left
			.article__category__upper {
				display inline-block
				width s('calc(50% - %s)', $articleCategorySeperatorSpacing)
				text-align right
			}
		}
	}
}



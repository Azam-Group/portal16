.associated {
	border-bottom solid 10px transparent //to imitate paragraphs without margin leakage to next column
	h5 {
		font-weight bold
		display inline
		&:after {
			content: ":"
		}
		margin-right 0.5em
	}
}
.list-links {
	display inline
	padding 0
	li {
		display inline
		padding 0
		&:after {
			content: ","
		}
		&:last-of-type:after {
			content none
		}
	}
}
.list-chips {
	display inline
	padding 0
	li {
		padding 0
		display inline
		a {
			display inline-block
			padding 0 vr-block(0.125)
			background #f1f1f1
			border 1px solid #ddd
			color inherit
			text-decoration none
			font-size 12px
			&:hover {
				background darken(#f1f1f1, 10)
			}
		}
	}
}

.list-citations {
	display inline
	padding 0
	li {
		padding-top 5px
		&:first-of-type{
			display inline
		}
		>* {
			margin 0 !important //TODO Burke will clean up the api so there is no inline styling. If not we should strip it server side
			padding 0 !important
			&:first-of-type{
				display inline
			}
		}
	}
}


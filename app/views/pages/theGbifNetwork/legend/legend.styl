.map-legend {
    position absolute
    padding 0 20px 0 20px
    margin-left 70px
    bottom 0
    background-color rgba(173,203,220,0.2)
    box-shadow -1px -1px 2px 2px rgba(235,235,235,0.2)

    header {
        outline none
    }
    h4 {
        text-align center
        display inline-block
    }
    span {
        font-size 20px
    }
    ul {
        padding-left 0
        padding-bottom 10px
        text-align left
        visibility visible
        height auto
        transition height 1s ease-out
    }
}

.map-legend-folded {
    position absolute
    padding 0 20px 0 20px
    margin-left 70px
    bottom 0
    background-color rgba(173,203,220,0.2)
    box-shadow -1px -1px 2px 2px rgba(235,235,235,0.2)

    header {
        outline none
    }
    h4 {
        text-align center
        display inline-block
    }
    span {
        font-size 20px
    }
    ul {
        padding-left 0
        padding-bottom 0
        text-align left
        visibility hidden
        height 0
        transition height 1s ease-out
    }
}

.square-vp {
    display inline-block
    content " "
    width 20px
    height 10px
}
.square-vp--checked {
    @extend .square-vp
    background-color $votingParticipant
    border 1px solid $votingParticipantDimmed
}
.square-vp--unchecked {
    @extend .square-vp
    background-color $votingParticipantDimmed
    border 1px solid $votingParticipant
}

.square-acp {
    display inline-block
    content " "
    width 20px
    height 10px
}

.square-acp--checked {
    @extend .square-acp
    background-color $associateCountryParticipant
    border 1px solid $associateCountryParticipantDimmed
}
.square-acp--unchecked {
    @extend .square-acp
    background-color $associateCountryParticipantDimmed
    border 1px solid $associateCountryParticipant
}


.square-vp {
    display inline-block
    content " "
    width 20px
    height 10px
}
.square-vp--checked {
    @extend .square-vp
    background-color $votingParticipant
    border 1px solid $votingParticipantDimmed
}
.square-vp--unchecked {
    @extend .square-vp
    background-color $votingParticipantDimmed
    border 1px solid $votingParticipant
}

.square-acp {
    display inline-block
    content " "
    width 20px
    height 10px
}

.square-acp--checked {
    @extend .square-acp
    background-color $associateCountryParticipant
    border 1px solid $associateCountryParticipantDimmed
}
.square-acp--unchecked {
    @extend .square-acp
    background-color $associateCountryParticipantDimmed
    border 1px solid $associateCountryParticipant
}

.map-info-overlay {
    position absolute
    text-align left
    top 40px
    left calc(50% + 50px)
    padding 0
    max-width 400px
    background-color $lightOverlayOpacity
    z-index 500

    header {
        min-height 100px
        position relative
        box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
    }
    a {
        color $blueTintedBlack
        .highlight {
            color $white
        }
    }
    a:hover {
        text-decoration none
    }
    h1 {
        margin 0
        position absolute
        bottom 5px
        left 5px
    }
    ul {
        padding 0 20px
        li {
            font-size 18px
        }
    }
}

.map-info-overlay--none {
    display none
}

.info-pane__header {
    margin-top vrBlock(0.5)
    a {
        color $discreetInk
    }
}
.info-pane__digest {
    margin-bottom vrBlock(0.5)
}

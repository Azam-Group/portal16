.map-legend {
    position absolute
    padding 0 20px 0 20px
    margin 0 auto
    bottom 0
    background-color rgba(173,203,220,0.2)
    box-shadow -1px -1px 2px 2px rgba(235,235,235,0.2)

    header {
        outline none
    }
    h4 {
        text-align center
        display inline-block
    }
    span {
        font-size 20px
    }
    ul {
        padding-left 0
        padding-bottom 10px
        text-align left
        height auto
        transition height 1s ease-out
        label {
            margin-left 8px
        }
        li {
            outline none
            >div {
                cursor pointer
            }
        }
    }
}

.map-legend-folded {
    @extend .map-legend
    ul {
        height 0
        overflow hidden
        padding-bottom 0
        transition height 1s ease-out
    }
}

+isAbove($toggle) {
    .map-legend {
        left 70px
    }
}


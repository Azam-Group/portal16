.square-vp {
    display inline-block
    content " "
    width 20px
    height 10px
}
.square-vp--checked {
    @extend .square-vp
    background-color $votingParticipant
    border 1px solid $votingParticipantDimmed
}
.square-vp--unchecked {
    @extend .square-vp
    background-color $votingParticipantDimmed
    border 1px solid $votingParticipant
}

.square-acp {
    display inline-block
    content " "
    width 20px
    height 10px
}

.square-acp--checked {
    @extend .square-acp
    background-color $associateCountryParticipant
    border 1px solid $associateCountryParticipantDimmed
}
.square-acp--unchecked {
    @extend .square-acp
    background-color $associateCountryParticipantDimmed
    border 1px solid $associateCountryParticipant
}

.map-info-overlay {
    position absolute
    text-align left
    top 40px
    left calc(45% + 50px)
    padding 0
    min-width 300px
    max-width 48%
    max-height 85%
    overflow scroll
    background-color $lightOverlayOpacity
    z-index 80

    header {
        min-height 100px
        min-width 300px
        position relative
        top 0
        box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
    }
    footer {
        content " "
        margin-top vrBlock(0.5)
    }

    .vp-background {
        background radial-gradient(farthest-corner at 30% 20%, #75C05F 20%, #57B23C 60%, #50A237)
    }
    .acp-background {
        background radial-gradient(farthest-corner at 30% 20%, #23B5E8 20%, #5080C1 60%, #5080C1)
    }
    .p-background {
        background radial-gradient(farthest-corner at 30% 20%, #DBC787 20%, #DFDDCF 60%, #C7C193)
    }

    a {
        color $blueTintedBlack
        .highlight {
            color $white
        }
    }
    a:hover {
        text-decoration underline
        color $black
    }
    h1 {
        margin 0
        position absolute
        bottom 10px
        left 10px
        text-shadow 1px 1px 1px $gray20
    }
    ul {
        padding 0 20px
        li {
            font-size 18px
        }
    }
    .info-pane__header {
        margin-top vrBlock(0.5)
        a {
            color $discreetInk
        }
    }
    .info-pane__digest {
        margin-top vrBlock(0.5)
    }
}

.map-info-overlay--none {
    display none
}


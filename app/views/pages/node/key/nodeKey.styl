.node {
    &__summary {
        margin-bottom 10px
    }
    &__images {
        .cover-image {
            margin 0
            border none
        }
    }
    &__stats {
        background $navBar_background_color
        display flex
        justify-content space-around
        color white
        > * {
            display block
            text-align center
            padding 10px
            flex 1 0 auto
            background $navBar_background_color
            transition background 200ms ease
            &:hover {
                background darken($navBar_background_color, 5)
            }
        }
        &__count {
            font-size 20px
            font-weight 300
        }
    }
    //&__info {
    //    padding vrBlock(2)
    //    border 1px solid $stripeBorderColor
    //    background $lightBackground
    //}
}

.articleLinks {
    padding-top vrBlock(1) 0
    >div {
        display inline-block
        margin-right 10px
        a {
            display inline-block
            width 40px
            height 40px
        }
    }
}
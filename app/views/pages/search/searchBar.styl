.search-bar {
	height vrBlock(3)
	padding 0
	&__term {
		margin-top vrBlock(0.5)
		display inline-block
		position relative
		width 100%
		>input {
			height vrBlock(2)
			background $lightBackground
			padding vrBlock(0.5) 15px
			border 1px solid $stripeBorderColor
			outline none
			width 100%
			box-sizing border-box
			padding-right vrBlock(4)
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			background none
			font-size 16px
			line-height vrBlock(1)
			&:focus {
				outline none
			}
		}
	}
	&__search, &__clear, button {
		display block
		height vrBlock(2)
		width vrBlock(2)
		text-align center
		line-height vrBlock(2)
		position absolute
		right 0
		top 0px
		font-size 20px
		color inherit
		border none
	}
	&__search, &__search:hover {
		background $actionColor
		color white
		text-decoration none
	}
	&__clear {
		right vrBlock(2)
	}
}

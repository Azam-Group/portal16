.Search__content {
	max-width 1200px
	margin auto
}

.SearchResults__other {
	max-width 800px
	flex 0 1 auto
	order 1
	margin 0 auto
}
.SearchResults__section {
	margin vr-block(1)
	h3 {
		font-size 1.2rem
		font-weight normal
		a {
			color #009FD4
			&:hover {
				text-decoration underline
			}
		}
	}
}

.SearchResults__section-comment {
	@extends .SearchResults__section
	margin-bottom -(vr-block(0.75))
}

.searchResults__list >div {
	margin-bottom vr-block(1)
	&:last-of-type {
		margin 0
	}
	>div {
		a {
			color #aaa
			&:hover {
				text-decoration underline
			}
		}
		.searchResults__list__custom {
			color #aaa
			span {
				padding-right 5px
			}
		}
		p {
			margin 0
		}
	}
}

.SearchResults__section__more {
	border-top 1px solid #eee
	text-align center
	color #aaa
	padding vr-block(0.25)
	font-size 90%
	a {
		margin 0 vr-block(1)
		text-transform uppercase
	}
}
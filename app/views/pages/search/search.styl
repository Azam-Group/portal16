.search-content {
	//max-width 1200px
	margin auto
}

.search-content .search-bar {
	margin-bottom vrBlock(1)
	overflow hidden
	background #fbfbfb
	border-bottom 1px solid #ddd
	.card__tabs {
		background #fbfbfb
		border-top 1px solid #ddd
		.tabs {
			max-width 800px
			margin auto
		}
		.tab {
			flex 0 0 auto
			&:first-of-type {
				margin-left vrBlock(1)
				border-bottom 2px solid deepskyblue
			}
		}
	}

}

.search-results__other {
	max-width 800px
	flex 0 1 auto
	order 1
	margin 0 auto
}
.search-results__section {
	margin vrBlock(1)
	margin-top 0
	.search-results__list {
		h3 {
			a {
				color #009FD4
				&:hover {
					text-decoration underline
				}
			}
		}
	}
}

.search-results__section-comment {
	@extends .search-results__section
	// margin-bottom -vrBlock(0.75)
}

.search-results__list >div {
	margin-bottom vrBlock(1)
	&:last-of-type {
		margin 0
	}
	>div {
		a {
			color #aaa
			&:hover {
				text-decoration underline
			}
		}
		.search-results__list__custom {
			color #aaa
			span {
				padding-right 5px
			}
		}
		p {
			margin 0
		}
	}
}

.search-results__section__more {
	border-top 1px solid #eee
	text-align center
	color #aaa
	padding vrBlock(0.25)
	font-size 90%
	a {
		margin 0 vrBlock(1)
		text-transform uppercase
	}
}
.circle-char {
    cursor default
    display inline-block
    border-width 1px
    border-style solid
    height 18px
    width 18px
    text-align center
    font-size .75rem
    line-height 16px
    margin-left 5px
    position relative
    top 0px
    border-radius 50%
}

.summaryStatus {
    color white
    border-radius 2px
    background $navBar_background_color
    &--critical, &--warning {
        background tomato
    }
    &__message {
        font-size 16px
    }
    &__updatedAt {
        color rgba(0,0,0,0.3)
    }
}

.status {
    &--critical, &--warning {
        .statusLabel {
            color tomato
        }
    }
    &--operational, &--info {
        .statusLabel {
            color $navBar_background_color
        }
    }
}

.statusBadge {
    background $navBar_background_color
    color white
    padding 3px 5px
    border-radius 2px
    display inline-block
}
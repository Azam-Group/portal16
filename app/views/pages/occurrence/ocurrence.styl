.viewContentWrapper {
	height 100%
}
.Ocurrences {
	margin vrBlock(1)
}
.Ocurrences > div {
	height 300px;
	background white
	margin-bottom vrBlock(1)
	padding vrBlock(1)
}


.site-drawer {
	.site-drawer__sub {
		color black
		background #aaa
		width $filterDrawerWidth
		height 100%
		position absolute
		top 0
		left 0
		transition: right 500ms ease;
	}
}
+isAbove($tablet) {
	.site-drawer {
		.site-drawer__sub {
			left $filterDrawerWidth
			.is-active {
				background pink
			}
		}
	}
}

.chip {
	background pink
	color white
}

.tabBar {
	background #fbfbfb
	border-bottom 1px solid #ddd
	.tabs {
		group()
		a {
			float left
			display inline-block
			padding .375rem .75rem
			&.is-active {
				border-bottom 2px solid deepskyblue
			}
		}
	}
}
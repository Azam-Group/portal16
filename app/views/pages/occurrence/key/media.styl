.occurrenceMedia {
	columns 1 30px
	color #555
	font-size 12px
	.imgContainer {
		background #eee
		img {
			width 100%
			height 0
			padding-bottom 70%
			visibility hidden
			&.loaded {
				height auto
				padding-bottom 0
				visibility visible
			}
			&.failed {
				display none
			}
		}
	}
	.card {
		break-inside avoid-column
		margin-top 10px
		display inline-block
		width 100%
	}
	.card__content {
		padding vr-block(0.5)
		overflow hidden
	}
	dl {
		margin 0
	}
	dd, dt {
		display inline
		word-wrap break-word
	}
	dt:after {
		content ':'
	}
	figcaption {
		color inherit
		p {
			max-width 100%
		}
		.details {
			display none
			&.show {
				display block
			}
		}
	}
}

+isAbove($tablet) {
	.occurrenceMedia {
		columns 2 30px
	}
}

+isAbove($laptop) {
	.occurrenceMedia {
		columns 3 30px
	}
}
.buttonExpand {
	display block
	text-align center
	color #aaa
	input[type=checkbox] {
		visibility hidden
		position absolute
	}
	label {
		text-align center
		font-weight inherit
		cursor pointer
	}
	label:first-of-type {
		transition all 300ms ease
		display block
		background #D2D8DC
		width 30px
		height 30px
		margin 0.25rem auto
		line-height 30px
		border-radius 15px
		font-size 30px
		&:hover {
			background-color #aaa
			color white
		}
	}
	label>span:nth-of-type(2) {
		display none
	}
	label>span:nth-of-type(1) {
		display block
	}
}
.occurrenceKey__table {
	&.isExpanded {
		.buttonExpand {
			.buttonExpand__headline {
				display block
			}
			label:first-of-type {
				width 20px
				height 20px
				line-height 20px
				border-radius 10px
				font-size 20px
			}
			label>span:nth-of-type(1) {
				display none
			}
			label>span:nth-of-type(2) {
				display block
			}
		}
	}

}

.multiToggle {
	text-align center
	margin 0 0 vr-block(1) 0
	>div {
		margin 2px
		padding 10px
		display inline-block
		position relative
		background-color #D2D8DC
		transition background-color 200ms ease
		&:focus {
			outline none
		}
		&.isActive {
			background-color #53657B// #39adcc
			color white
			&:after {
				top 100%
				left 50%
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none
				border-color rgba(57, 173, 204, 0)
				border-top-color #53657B
				border-width 7px
				margin-left -8px
			}
		}
	}
}

.occurrenceKey__table {
	.wrapper {
		display none
	}
	&.isExpanded {
		.wrapper {
			display block
		}
	}

	.card-table {
		overflow auto
		margin-bottom 0
		tbody {
			tr:nth-of-type(even) {
				background #f5f5f5
			}
		}
		td {
			min-width 250px
		}
	}
}
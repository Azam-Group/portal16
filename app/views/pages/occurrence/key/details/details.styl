+isAbove(800px) {
	.occurrenceKey__details {
		.blockContent {
			max-width 100%
			section {
				max-width calc(50% - 30px)
			}
		}
	}
}

+isAbove(1000px) {
	.occurrenceKey__details {
		.blockContent {
			max-width 1000px
			section {
				max-width 470px
			}
		}
	}
}

.occurrence-key__term-groups {
	min-width 800px
	display flex
	flex-wrap wrap
	>section {
		flex 0 1 auto
		margin 0 15px
	}
	>section.isExpanded {
		flex 0 1 auto
		max-width 100%
	}
}
.term-block {
	.table {
		table-layout fixed
		thead {
			border-bottom 2px solid #888
			th {
				border none
			}
		}
		tr,td, th {
			border none
			padding 2px
			overflow hidden
			word-break break-all
			word-break break-word
			hyphens auto
			width 25%
		}
		td:first-of-type {
			text-transform capitalize
			width 150px
			word-break normal
		}
		tr:nth-of-type(even) {
			background #F7F9FA
		}
		tbody tr:hover {
			background darken(#F7F9FA, 10)
		}
		tr.table__groupHeader {
			background #DEE2E4
		}
	}
	dl dl {
		padding-left 1rem
		dt {
			display inline
		}
	}

	&.isCollapsed {
		.table {
			thead {
				th {
					display none
				}
			}
		}
	}
}

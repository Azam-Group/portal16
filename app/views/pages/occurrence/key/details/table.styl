.buttonExpand {
	display block
	text-align center
	color #aaa
	input[type=checkbox] {
		visibility hidden
		position absolute
	}
	label {
		text-align center
		font-weight inherit
		cursor pointer
	}
	label:first-of-type {
		transition all 300ms ease
		display block
		background #D2D8DC
		width 30px
		height 30px
		margin 0.25rem auto
		line-height 30px
		border-radius 15px
		font-size 30px
		&:hover {
			background-color #aaa
			color white
		}
	}
	label>span:nth-of-type(2) {
		display none
	}
	label>span:nth-of-type(1) {
		display block
	}
}
.occurrenceKey__table {
	.table__detail {
		display none
	}
	&.isExpanded {
		.buttonExpand {
			.buttonExpand__headline {
				display block
			}
			label:first-of-type {
				width 20px
				height 20px
				line-height 20px
				border-radius 10px
				font-size 20px
			}
			label>span:nth-of-type(1) {
				display none
			}
			label>span:nth-of-type(2) {
				display block
				margin-bottom -1rem
			}
		}
		.table__detail {
			display table-cell
		}
	}

}

.multiToggle {
	text-align center
	margin 0 0 vr-block(1) 0
	>div {
		margin 2px
		padding 10px
		display inline-block
		position relative
		background-color #D2D8DC
		transition background-color 200ms ease
		&:focus {
			outline none
		}
		&.isActive {
			background-color #53657B// #39adcc
			color white
			&:after {
				top 100%
				left 50%
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none
				border-color rgba(57, 173, 204, 0)
				border-top-color #53657B
				border-width 7px
				margin-left -8px
			}
		}
	}
}

.occurrenceKey__table {
	.wrapper {
		//display none
		max-width 400px
		transition max-width 300ms ease
	}
	&.isExpanded {
		.wrapper {
			display block
			max-width 1000px
		}
	}

	.card-table {
		overflow auto
		.table {
			table-layout fixed
			margin-bottom 0
		}
		th {
			color #555
		}
		tbody {
			tr:nth-of-type(even) {
				background #f5f5f5
			}
			tr.table__groupHeader {
				background #DEE2E4
				text-transform uppercase
				a {
					color #888
				}
			}
			tr {
				td:first-of-type {
					text-transform capitalize
				}
			}
		}
		td {
			width 25%
			word-wrap break-word
		}
	}
}

.issue {
	border-radius 0
	font-weight inherit
}

.badge--error {
	background tomato
	color white
}

.badge--warning {
	background #F5CC27
	color inherit //darken(#756216, 50)
}

.badge--info {
}

.issue--error {
	@extend .issue
	background lighten(tomato, 20)
	color darken(tomato, 40)
}

.issue--warning {
	@extend .issue
	background lighten(#F5CC27, 20)
	color darken(#756216, 10)
}

.issue--info {
	@extend .issue
	background #ccc
	color #555
}


/*
  Allow angular.js to be loaded in body, hiding cloaked elements until
  templates compile.  The !important is important given that there may be
  other selectors that are more specific or come later and might alter display.
 */
.ng-cloak, [data-ng-cloak] {
	display: none !important;
}

.table {
	th {
		font-weight normal
	}
}
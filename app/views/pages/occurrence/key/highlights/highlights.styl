.occurrenceKey__highlights {
	.propertyPairs {
		padding 0
		li {
			word-break break-all
			word-break break-word
			hyphens auto
			> span:first-of-type {
				font-weight bold
			}
		}
	}

	.balanced-row {
		display flex
		justify-content space-around
	}

	.issue-summary {
		max-width 500px
		.badge {
			font-weight 300
		}
	}
}

+isBelow($tablet) {
	.balanced-row {
		lost-utility clearfix
		>div {
			lost-column 1/2
		}
	}
}
.imageGallery {
	display flex
	flex-wrap wrap
	justify-content flex-start
	margin vr-block(1) vr-block(1) 0 0
	>div, a {
		display block
		flex 1 1 auto
		max-width 300px
		height 150px
		overflow hidden
		background-size cover
		background-position center
		img {
			display none
		}
		&.imageGallery__img {
			display none
			&.isValid {
				display block
				margin 0 0 vr-block(1) vr-block(1)
			}
		}
		&.imageGallery__more {
			display flex
			justify-content center
			text-align center
			flex-direction column
			background #ccc
			color #888
			min-width 100px
			cursor pointer
			margin 0 0 vr-block(1) vr-block(1)
			padding vr-block(1)
			&:focus {
				outline none
			}
			span {
				text-align center
			}

		}
	}
}
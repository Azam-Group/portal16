{# Complete the primary contacts listed in the header, as <li> items. #}
{% if contactsByName[0] %}
    <div class="header-contacts">
        <p>
            {% set comma = joiner() %}
            {% for contact in contactsByName -%}
                {$ comma() $} <a>{$ contact.name $}</a>
            {%- endfor %}
        </p>
    </div>
{% endif %}
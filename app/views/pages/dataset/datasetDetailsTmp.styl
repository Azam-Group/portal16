.tabbedContent {
	section {
		>div {
			display none
		}
	}
}
+isBelow($laptop) {
	.tabbedContent {
		section {
			&.isExpanded {
				>div {
					display block
				}
			}
		}
	}
}

+isAbove($laptop) {
	.tabbedContent {
		>div>div {
			position relative
			height 500px
			max-height 80vh
		}
		section {
			>div {
				position absolute
				height 100%
				left 33%
				top 0
				width 66%
				display none
				overflow auto
			}

			&.isActive {
				>div {
					display block
				}
			}
		}
	}
}
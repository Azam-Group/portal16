h4.content-type-label {
    font-weight 400
    text-transform uppercase
    font-size 1.3rem
}

.publisher-field--long-title {
    .container {
        max-width none
    }
}
.publisher-field--large-count {
    margin 0 0
    .published-by {
        max-width none
    }
}
.published-by {
    max-width 400px
}
.record-count {
    font-size 4rem
    line-height 60px
    font-weight 300
    padding-right 8px
    padding-left 3px
}
.download-block {
    border 2px solid $orangePeelLight
    border-radius 10px
}

.header-contacts {
    max-width 750px
    margin 0 auto vrBlock(1) auto
}
.header-contact {
    display inline-block
    font-size 1.2rem
    padding 0 20px
    address {
        margin-bottom 0
    }
}

.metadata {
    section {
        border-top 1px solid gray
        padding-top vrBlock(0.5)
    }
}

.metadata-section {

    h5 {
        margin-top vrBlock(1)
        margin-bottom vrBlock(0.5)
    }

    h5:first-of-type {
        margin-top vrBlock(0.5)
    }

    ul {
        padding-left 20px
    }

    .list--bibliographic-citation {
        padding-left 0
        li {
            padding-left 1rem
            text-indent -1rem
            margin-bottom 5px
        }
    }

    .list--keyword-collection {
        li {
            display inline
        }
        li::after {
               content ', '
        }
        li:last-child::after {
           content ''
        }
    }

    .list--ordered {
        li {
            margin-bottom vrBlock(1)
        }
    }
}

.list--ordered {
    list-style-type decimal
    padding-left 20px
}

+isAbove($tablet) {
    .metadata {
        section {
            h4 {
                a.anchor--chapter {
                    display block
                    position relative
                    top -60px
                    visibility hidden
                }
            }
        }
    }
}

.taxonomic-coverage {
    border-top 1px solid lightgrey
    padding-top 20px

    &:first-of-type {
        border-top none
        padding-top 0px
    }

    dt {
        font-weight normal
    }
    dd {
        margin-left 20px
        margin-bottom vrBlock(0.5)
    }
}

.contacts {
    display flex
    flex-wrap wrap
    justify-content left
    margin 0 auto
}

.address {
    padding-right 15px
    flex 1 0 250px
}

+isAbove($tablet) {
    .contacts {
        margin 0 auto
    }
    .address {
        width 250px
    }
}
.download-events {
    max-height 400px
    overflow scroll
    margin-bottom 20px;
    table {
        tr {
            td:nth-child(3) {
                max-width 400px
                font-weight 300
            }
        }
    }
    .table-cell-label {
        margin-right 20px
        font-weight 500
    }
}

ul.no-indent {
    padding-left 0
}

.record-count {
    display inline-block
}

.data-source {
    display inline-block
}

.related-news {
    background-color #2D3C44
    color $gray10
    padding-top 0px
    padding-bottom 0px

    >div>div>div:nth-child(2) {
        padding-top 20px
        padding-bottom 20px
    }
}

/* experimental below */
nav.metadata-nav {
    display none
}
+isAbove($tablet) {
    .metadata {
        .row {
            position relative
        }
        section {
            border-top none
            padding-top 0
        }
        section:before {
            display block
            content " "
            height 60px
            margin-top -60px
            visibility hidden
        }
    }
    nav.metadata-nav {
        display none
    }
}
+isAbove($laptop) {
    nav.metadata-nav {
        display block
        li {
            border-left 2px solid transparent
        }
        li.active {
            border-left 2px solid $orangePeelLight
        }
    }
}

.toggle-collapse {
    display none
}

.toggle-collapse + label {
    cursor pointer
    display block
    position relative
    margin-left 12px
    margin-bottom vrBlock(0.5)
    font-weight normal
    font-size vrBlock(1)
    line-height vrBlock(1)
}

.toggle-collapse + label + section {
    display none
    margin-left 12px
}

.toggle-collapse + label + section {
    > h4 {
        display none
    }
}

.toggle-collapse:checked + label + section {
    display block
    margin-bottom vrBlock(1)
}

.toggle-collapse + label:before {
    position absolute
    width 12px
    left -12px
    top 3px
    content "\A"
    border-top 6px solid transparent
    border-bottom 6px solid transparent
    border-left 8px solid gray
}

.toggle-collapse:checked + label:before {
    position absolute
    content "\A"
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-top 8px solid gray
    width 12px
    left -16px
    top 8px
}

+isAbove($tablet) {
    .toggle-collapse + label {
        display none
    }
    .toggle-collapse + label + section {
        display block
        max-height 100%
        margin-left 0
    }
    .toggle-collapse + label + section {
        > h4 {
            display block
            padding-top vrBlock(1.5)
            padding-bottom vrBlock(0.5)
            border-bottom 1px solid gray
        }
    }
    .toggle-collapse + label + section:nth-of-type(1) {
        h4 {
            padding-top 0
        }
    }
}

.contacts-collapse {
    display none
}

.contacts-collapse + label {
    cursor pointer
    display inline
    position relative
    margin-left 12px
    margin-bottom vrBlock(0.5)
    font-weight normal
    font-size vrBlock(1)
    line-height vrBlock(1)
}

.contacts-collapse + label:before {
    content "\A"
    position absolute
    width 12px
    left -18px
    top 8px
    border-top 6px solid transparent
    border-bottom 6px solid transparent
    border-left 8px solid gray
}

.contacts-collapse:checked + label:before {
    content "\A"
    position absolute
    width 12px
    left -20px
    top 10px
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-top 8px solid gray
}

.contacts-collapse + label ~ ol {
    display none
    margin-left 12px
}

.contacts-collapse:checked + label ~ ol {
    display block
    margin-bottom vrBlock(1)
}

h4.content-type-label {
    font-weight 400
    text-transform uppercase
    font-size 1.3rem
}

.publisher-field--long-title {
    .container {
        max-width none
    }
}
.publisher-field--large-count {
    margin 0 0
    .published-by {
        max-width none
    }
}
.published-by {
    max-width 400px
}
.record-count {
    font-size 4rem
    line-height 60px
    font-weight 300
    padding-right 8px
    padding-left 3px
}
.download-block {
    border 2px solid $orangePeelLight
    border-radius 10px
}

.header-contacts {
    margin-bottom 20px
}
.header-contact {
    display inline-block
    font-size 1.2rem
    padding 0 20px
    address {
        margin-bottom 0
    }
}

.metadata {
    section {
        margin-bottom vrBlock(2)
    }
}

.metadata-section {
    margin-left 20px

    h5 {
        margin-top vrBlock(1.5)
        margin-bottom vrBlock(0.5)
    }

    ul {
        padding-left 20px
    }

    ul.bibliographic-citation {
        padding-left 0px
        li {
            padding-left 2rem
            text-indent -2rem
            margin-bottom 5px
        }
    }

    .keyword-collection {
        li {
            display inline
        }
        li::after {
               content ', '
        }
        li:last-child::after {
           content ''
        }
    }
}

.taxonomic-coverage {
    border-top 1px solid lightgrey
    padding-top 20px

    &:first-of-type {
        border-top none
        padding-top 0px
    }

    dt {
        font-weight normal
    }
    dd {
        margin-left 20px
        margin-bottom vrBlock(0.5)
    }
}

.download-events {
    max-height 400px
    overflow scroll
    margin-bottom 20px;
    table {
        tr {
            td:nth-child(3) {
                max-width 400px
                font-weight 300
            }
        }
    }
    .table-cell-label {
        margin-right 20px
        font-weight 500
    }
}

ul.no-indent {
    padding-left 0
}

.record-count {
    display inline-block
}

.data-source {
    display inline-block
}

.related-news {
    background-color #2D3C44
    color $gray10
    padding-top 0px
    padding-bottom 0px

    >div>div>div:nth-child(2) {
        padding-top 20px
        padding-bottom 20px
    }
}

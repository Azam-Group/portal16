h4.content-type-label {
    font-weight 400
    text-transform uppercase
    font-size 1.3rem
}

.verticalTabsWrapper {
    padding 10px
    margin-bottom 20px
}

.verticalTabs {
    section {
        .tabTitle {
            margin 0
        }
        .tabContent {
            display none
        }
    }
}

.taxonomicCoverage {
    border-top 1px solid lightgrey
    padding-top 20px
    &:first-child {
        border-top none
        padding-top 0px
    }
}

.bibliographicCitation li {
    padding-left 2em
    text-indent -2em
    margin-bottom 5px
    &:last-child {
        margin-bottom 0
    }
}

.downloadEvents {
    max-height 400px
    overflow scroll
    table {
        tr {
            td:nth-child(3) {
                max-width 400px
                font-weight 300
            }
        }
    }
    .tableCellLabel {
        margin-right 20px
        font-weight 500
    }
}

.noIndent {
    padding-left 0
}
.recordCount {
    display inline-block
}

.dataSourc {
    display inline-block
}

+isBelow($laptop) {
    .verticalTabs {
        section {
            &.isExpanded {
                .tabContent {
                    display block
                }
            }
        }
    }
}

+isAbove($laptop) {
    .verticalTabs {
        >div>div>div>div {
            position relative
            height 500px
            max-height 80vh
        }
        section {
            .tabContent {
                position absolute
                height 100%
                left 33%
                top 0
                width 66%
                display none
                overflow auto
                border 1px solid lightgrey
                padding 20px 22px 20px 22px
                border-radius 5px
            }
            .tabTitle {
                width 30%
                left 0
                border-bottom 1px solid $gray-lighter
                position relative
                h4 {
                    margin 0
                    line-height 2.5em
                    vertical-align baseline
                    font-weight 300
                    color lightgrey
                }
            }

            &.isActive {
                .tabTitle {
                    border-bottom 1px solid $gray-light
                    h4 {
                        color black
                        font-weight 400
                    }
                    h4::after {
                        position relative
                        content "\276f"
                        float right
                    }
                }
                .tabContent {
                    display block
                }
            }
        }
    }
}
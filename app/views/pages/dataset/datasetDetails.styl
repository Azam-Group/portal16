h4.content-type-label {
    font-weight 400
    text-transform uppercase
    font-size 1.3rem
}

.publisher-field--long-title {
    .container {
        max-width none
    }
}
.publisher-field--large-count {
    margin 0 0
    .published-by {
        max-width none
    }
}
.published-by {
    max-width 400px
}
.record-count {
    font-size 4rem
    line-height 60px
    font-weight 300
    padding-right 8px
    padding-left 3px
}
.download-block {
    border 2px solid $orangePeelLight
    border-radius 10px
}

.header-contacts {
    margin-bottom 20px
}
.header-contact {
    display inline-block
    font-size 1.2rem
    padding 0 20px
    address {
        margin-bottom 0
    }
}

.metadata-section {

    h5 {
        margin-top vrBlock(1.5)
        margin-bottom vrBlock(0.5)
    }

    h5:first-of-type {
        margin-top vrBlock(0.5)
    }

    ul {
        padding-left 20px
    }

    ul.bibliographic-citation {
        padding-left 0px
        li {
            padding-left 2rem
            text-indent -2rem
            margin-bottom 5px
        }
    }

    .keyword-collection {
        li {
            display inline
        }
        li::after {
               content ', '
        }
        li:last-child::after {
           content ''
        }
    }
}

.taxonomic-coverage {
    border-top 1px solid lightgrey
    padding-top 20px

    &:first-of-type {
        border-top none
        padding-top 0px
    }

    dt {
        font-weight normal
    }
    dd {
        margin-left 20px
        margin-bottom vrBlock(0.5)
    }
}

.download-events {
    max-height 400px
    overflow scroll
    margin-bottom 20px;
    table {
        tr {
            td:nth-child(3) {
                max-width 400px
                font-weight 300
            }
        }
    }
    .table-cell-label {
        margin-right 20px
        font-weight 500
    }
}

ul.no-indent {
    padding-left 0
}

.record-count {
    display inline-block
}

.data-source {
    display inline-block
}

.related-news {
    background-color #2D3C44
    color $gray10
    padding-top 0px
    padding-bottom 0px

    >div>div>div:nth-child(2) {
        padding-top 20px
        padding-bottom 20px
    }
}

/* experimental below */
nav.metadata-nav {
    display none
}
+isAbove($tablet) {
    nav.metadata-nav {
        display block
    }
}

.toggle-collapse {
    display none
}

.toggle-collapse + label {
    cursor pointer
    display block
    position relative
    margin-left 12px
    margin-bottom vrBlock(0.5)
    font-weight normal
    font-size vrBlock(1)
    line-height vrBlock(1)
}

.toggle-collapse + label + section {
    display none
    margin-left 12px
}

.toggle-collapse + label + section {
    > h4 {
        display none
    }
}

.toggle-collapse:checked + label + section {
    display block
    margin-bottom vrBlock(1)
}

.toggle-collapse + label:before {
    position absolute
    width 12px
    left -12px
    top 3px
    content "\A"
    border-top 6px solid transparent
    border-bottom 6px solid transparent
    border-left 8px solid gray
}

.toggle-collapse:checked + label:before {
    position absolute
    content "\A"
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-top 8px solid gray
    width 12px
    left -14px
    top 8px
}

+isAbove($tablet) {
    .metadata {
        section {
            h4 {
                padding-bottom vrBlock(0.5)
                border-bottom 1px solid gray
            }
        }
    }

    .toggle-collapse + label {
        display none
    }
    .toggle-collapse + label + section {
        display block
        max-height 100%
        margin-left 0
    }
    .toggle-collapse + label + section {
        > h4 {
            display block
        }
    }

}
h4.content-type-label {
    font-weight 400
    text-transform uppercase
    font-size 1.3rem
}

.metadata {
    section {
        margin-bottom vrBlock(2)
    }
}

.metadata-section__content {
    margin-left 20px

    h5 {
        margin-top vrBlock(1)
        margin-bottom vrBlock(0.3)
    }

    ul {
        padding-left 20px
    }

    ul.bibliographic-citation {
        padding-left 0px
        li {
            padding-left 2rem
            text-indent -2rem
            margin-bottom 5px
            &:last-child {
                margin-bottom 0
            }
        }
    }

    .keyword-collection {
        li {
            display inline
        }
        li::after {
               content ', '
        }
        li:last-child::after {
           content ''
        }
    }

}

.taxonomic-coverage {
    border-top 1px solid lightgrey
    padding-top 20px

    &:first-of-type {
        border-top none
        padding-top 0px
    }

    dt {
        font-weight normal
    }
    dd {
        margin-left 20px
        margin-bottom vrBlock(0.5)
    }
}

.download-events {
    max-height 400px
    overflow scroll
    table {
        tr {
            td:nth-child(3) {
                max-width 400px
                font-weight 300
            }
        }
    }
    .table-cell-label {
        margin-right 20px
        font-weight 500
    }
}

ul.no-indent {
    padding-left 0
}

.recordCount {
    display inline-block
}

.data-source {
    display inline-block
}

.related-news {
    background-color #2D3C44
    color $gray10
    padding-top 0px
    padding-bottom 0px

    >div>div>div:nth-child(2) {
        padding-top 20px
        padding-bottom 20px
    }
}

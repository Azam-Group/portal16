h4.content-type-label {
    font-weight 400
    text-transform uppercase
    font-size 1.3rem
}

.metadata {
    section {
        margin-bottom vr-block(2)
    }
}

.metadata-section__content {
    margin-left 20px

    h5 {
        margin-top vr-block(1)
        margin-bottom vr-block(0.3)
    }

    ul {
        padding-left 20px
    }

    ul.bibliographic-citation {
        padding-left 0px
        li {
            padding-left 2rem
            text-indent -2rem
            margin-bottom 5px
            &:last-child {
                margin-bottom 0
            }
        }
    }

    .keyword-collection {
        li {
            display inline
        }
        li::after {
               content ', '
        }
        li:last-child::after {
           content ''
        }
    }

}

.taxonomicCoverage {
    border-top 1px solid lightgrey
    padding-top 20px

    &:first-of-type {
        border-top none
        padding-top 0px
    }

    dt {
        font-weight normal
    }
    dd {
        margin-left 20px
        margin-bottom vr-block(0.5)
    }
}

.downloadEvents {
    max-height 400px
    overflow scroll
    table {
        tr {
            td:nth-child(3) {
                max-width 400px
                font-weight 300
            }
        }
    }
    .tableCellLabel {
        margin-right 20px
        font-weight 500
    }
}

ul.no-indent {
    padding-left 0
}

.recordCount {
    display inline-block
}

.dataSourc {
    display inline-block
}


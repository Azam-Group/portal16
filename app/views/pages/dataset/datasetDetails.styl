.wrapper-horizontal-stripes {
    color: black;
    > section {
        lost-utility: clearfix;
        padding: 20px 0;

        header {
            margin-bottom: 10px;
        }
        h1 {
            font-size: 2.5em;
            line-height: 1.3em;
            font-style: normal;
        }
    }
    > section:nth-child(even) {
        background-color: #f9f9f9;
    }
    > section:nth-child(odd) {
        background-color: #ffffff;
    }
    .container {
        max-width: 980px;
        margin-right: auto;
        margin-left: auto;
        .two-third {
            lost-column: 2/3;
        }
        .one-third {
            lost-column: 1/3;
        }
    }
    h4 {
        margin-bottom: 8px;
    }
    img {
        float right
    }
    #map {
        height: vr-block(30)
        padding: 0 0;
    }
    #mapframe {
        height: 100%;
    }
    .push-to-right {
        text-align: right;
    }
}
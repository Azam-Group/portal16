{# The coverages have been processed in the model #}
<div class="metadata-section">
    {% for value in element.values %}
        <div class="taxonomic-coverage">
            <p>{$ value.description | safe $}</p>
            {% if value.coverages %}
                <dl>
                    {% for coverage in value.coverages %}
                        {% if coverage.rank %}
                            <dt>{$ coverage.rank $}</dt>
                        {% endif %}
                        {% if coverage.taxa %}
                            <dd>
                                {% set comma = joiner() %}
                                {% for taxon in coverage.taxa -%}
                                    {% if taxon.italicized %}<i>{% endif %}{$ comma() $} <a
                                        href="{$ taxon.searchUrl $}">{$ taxon.scientificName
                                    $}</a>{% if taxon.italicized %}</i>{% endif %}{% if taxon.commonName %}({$ taxon.commonName $}){% endif %}
                                {%- endfor %}
                            </dd>
                        {% endif %}
                    {% endfor %}
                </dl>
            {% endif %}
        </div>
    {% endfor %}
</div>

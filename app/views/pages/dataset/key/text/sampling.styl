.dataset-key__sampling {
	ol {
		padding 0
		>li {
			.badge {
				background white
				border 1px solid $bodyTextColor
				color $bodyTextColor
			}
			div:first-of-type {
				float left
				text-align center
				width vrBlock(2)
				margin-top -(vrBlock(0.0625))
				margin-left 0.5px //compensate for the border on the text
			}
			div:last-of-type {
				margin-left vrBlock(1)
				padding-bottom vrBlock(1.5)
				padding-left vrBlock(1.5)
				border-left 1px solid lighten($bodyTextColor, 10)
			}
			&:last-of-type {
				div:last-of-type {
					border none
				}
			}
		}
	}
}
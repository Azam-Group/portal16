.dataset-key__bibliography{
	position relative
	overflow hidden
	ol {
		padding 0
		li {
			padding-bottom 15px
		}
	}
	.inline-bullet-list {
		li {
			&:after {
				color rgba(0,0,0,0.3)
			}
		}
	}
	&__list {
		max-height 400px
	}
	&__expand {
		$_buttonSize = vrBlock(1.5)
		position absolute
		width 100%
		left 0
		height 80px
		background linear-gradient(to bottom, rgba(255,0,0,0), rgba(255,255,255,1) 25%) // Standard syntax (must be last)
		bottom 0
		text-align center
		>a {
			margin auto
			display block
			font-size $_buttonSize
			color white
			width $_buttonSize
			height $_buttonSize
			line-height $_buttonSize
			text-align center
			border-radius 50%
			background rgba(0,0,0,0.1)
			position absolute
			left "calc(50% - %s)" % ($_buttonSize / 2)
			bottom ($_buttonSize / 2)
			&:before {
				font-weight bold
			}
		}
	}
}

.dataset-key__bibliography.is-expanded {
	.dataset-key__bibliography__list {
		max-height 100000px
	}
	.dataset-key__bibliography__expand {
		position relative
		height auto
		>a {
			position static
		}
	}
}

+isAbove($laptop) {
	.dataset-key__bibliography {
		ol {
			list-style-type decimal
		}
	}
}
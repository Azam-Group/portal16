.radial-progress {
	width 85px
	height 85px
	margin auto
	position relative
	&__count {
		position absolute
		top 50%
		bottom auto
		left 50%
		transform translateY(-50%) translateX(-50%)
		font-size 20px
	}
}

.round-image {
	display block
	width 85px
	height 85px
	border-radius 50px
	background-size cover
	background-position center
}


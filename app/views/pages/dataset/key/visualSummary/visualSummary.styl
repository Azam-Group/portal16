.dataset-key__visual-summary {
	>div {
		width 1170px
		max-width 100%
		margin auto
		position relative
		z-index 1
	}
	&__map {
		height 300px
		min-height 100%
		width 100%
	}
	
	&__counts {
		padding 1rem
		overflow hidden
		>p {
			margin-bottom vrBlock(1)
		}
			
		>div {
			display flex
			justify-content center
			flex-wrap wrap
		}
		&__group {
			flex 1 0 auto
			text-align center
			padding-right 10px
			margin-bottom vrBlock(0.5)
			>div {
				margin auto
			}
		}
		&__image{
			margin-top vrBlock(1)

		}
	}
}
+isAbove($laptop) {
	.dataset-key__visual-summary {
		&__counts {
			height 300px
			&__group {
				width 33%
				flex 0 0 33%
				&:nth-of-type(7), &:nth-of-type(8) {
					display none
				}
			}
		}
	}
}

.radial-progress {
	width 85px
	height 85px
	margin auto
	position relative
	&__count {
		position absolute
		top 50%
		bottom auto
		left 50%
		transform translateY(-50%) translateX(-50%)
		font-size 20px
	}
}

.round-image {
	width 85px
	height 85px
	border-radius 50px
	background-size cover
	background-position center
}

.summary-counts {
    .radial-progress {
        width 50px
        height 50px
        margin auto
        float left
    }
    &__percentage {
        display block
        float left
        height 50px
        line-height 50px
        padding-left 10px
        font-weight normal
        font-size 18px
    }
    &__description {
    }
}

.round-image {
    display block
    width 50px
    height 50px
    border-radius 50px
    background-size cover
    background-position center
}


.dataset-key__visual-summary {
	&__wrapper {
		display flex
		position relative
	}
	&__map {
		flex 1 1 auto
		gbmap {
			height 360px
		}
	}
	&__counts {
		flex 0 0 auto
		padding 1rem
		height 360px
		>div {
			overflow hidden
			width 150px
		}
		>p {
			margin-bottom vrBlock(1)
		}
		&__group {
			display inline-block
			width 100%
			text-align center
			padding-right 10px
			margin-bottom vrBlock(0.5)
			>div {
				margin auto
			}
		}
		&__image{
			margin-top vrBlock(1)

		}
	}
	&__counts--double {
		>div {
			width 300px
		}
		.dataset-key__visual-summary__counts__group {
			width 140px
		}
	}
}


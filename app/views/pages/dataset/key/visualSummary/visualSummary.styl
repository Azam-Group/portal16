.container--desktop {
    .dataset-key__visual-summary__map {
        width $desktop
        margin auto
        height 0
        padding-bottom 50%
        position relative
        gbmap {
            position absolute
            top 0
            height 100%
            width 100%
        }
    }
}

.dataset-key__visual-summary {
    &__wrapper {
        position relative
        z-index 10
    }
    &__map {
        gbmap {
            height 360px
        }
    }
    &__counts {
        padding 1rem
        margin auto
        margin-bottom -10px
        &__percentages {
            overflow hidden
            display flex
            flex-wrap wrap
        }
        &__totals {
            margin-bottom vrBlock(0.5)
            display flex
            > div {
                flex 1 0 auto
            }
        }
        &__group {
            display inline-block
            padding-right vrBlock(1)
            margin-bottom 10px
            flex 1 0 auto
        }
        &__image {
            margin-top vrBlock(1)

        }
    }
}


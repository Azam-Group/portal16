.container--desktop {
    .dataset-key__visual-summary__map {
        width $desktop
        margin auto
        height 0
        padding-bottom 50%
        position relative
        gbmap {
            position absolute
            top 0
            height 100%
            width 100%
        }
    }
}

.dataset-key__visual-summary {
    &__wrapper {
        position relative
        z-index 10
    }
    &__map {
        gbmap {
            height 360px
        }
    }
    &__counts {
        margin auto
        &__percentages {
            overflow hidden
            display flex
            flex-wrap wrap
            margin 5px 10px
        }
        &__totals {
            margin 0 (- vrBlock(1))
            margin-bottom vrBlock(1)
            display flex
            > div {
                margin 0 vrBlock(1)
                flex 0 0 auto
            }
        }
        &__group {
            display inline-block
            //padding-right vrBlock(1)
            margin 5px
            flex 1 0 auto
            max-width 250px
        }
        &__image {
            margin-top vrBlock(1)
        }
    }
}

.summary-counts {
    &__percentage {
        display block
        float left
        height 50px
        line-height 25px
        padding-left 10px
        font-weight normal
        font-size 18px
        > div {
            font-size 14px
        }
    }
    &__description {
        display block
        float left
        height 50px
        line-height 50px
        padding-left 10px
        font-weight normal
    }
}

.round-image {
    display block
    width 50px
    height 50px
    border-radius 50px
    background-size cover
    background-position center
    line-height 50px
    text-align center
    font-size 30px
    color white
    &:hover {
        text-decoration none
        color white
    }
}

.round-image--dark {
    @extends .round-image
    background darken($greyBackground, 10)
    transition background 200ms ease
    &:hover {
        background darken($greyBackground, 20)
    }
}

.summary-circle {
    width 50px
    height 50px
    line-height 50px
    font-size 50px
    margin auto
    display inline-block
    float left
    color darken($greyBackground, 10)
    text-decoration none
    &:hover {
        text-decoration none
        color darken($greyBackground, 20)
    }
}
.dataset-key__images {
    overflow hidden
    > div {
        position relative
        .dataset-key__images__list {
            display flex
            margin 0 2.5px
            justify-content flex-start
            a {
                margin 5px 2.5px
                flex 0 0 auto
                img {
                    height 150px
                    width auto
                }
            }
        }
    }
    &__more {
        $_buttonSize = vrBlock(1.5)
        margin auto
        display block
        font-size $_buttonSize
        color white
        width $_buttonSize
        height $_buttonSize
        line-height $_buttonSize
        text-align center
        border-radius 50%
        background rgba(0, 0, 0, 0.5)
        position absolute
        right ($_buttonSize / 2)
        top "calc(50% - %s)" % ($_buttonSize / 2)
        &:before {
            font-weight bold
        }
        &:hover {
            color white
            text-decoration none
        }
    }
}
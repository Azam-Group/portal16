.dataset-key__contributors {
    &__mail, &__phone {
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        width 100%
        display inline-block
        height vrBlock(1)
        float left
    }
    &__mail {
        //color $linkColor
    }
    &__roles {
        font-style italic
    }

    address {
        padding ($halfGutter/ 2) $halfGutter
        margin 0
        width 100% //could be removed once the other dataset contact styling is adjusted
        > i {
            display inline-block
            width 1.3em
            margin-left -1.3em
            float left
        }
    }
    &__item {
        position relative
        > address, > i {
            position relative
        }
        > i {
            font-size 60px
            margin-right 20px
            float none
            position absolute
            color #ededed
            top 0
            right 0
        }
        &:hover {
            > i {
                color #cee3ff
            }
        }
    }
    &__columns {
        display flex
        flex-wrap wrap
        margin 0 -($halfGutter)
        > div {
            flex 0 1 auto
            width 33%
        }
    }
}

+isAbove($desktop) {
    .dataset-key__contributors {
        &__columns {
            > div {
                width 100px
            }
        }
    }
}

.flex-columns {
    margin auto
    display flex
    flex-wrap wrap
    > div {
        flex 0 1 auto
        width 100%
    }
    > div {
        margin-top 10px
    }
}

+isAbove(500px) {
    .flex-columns {
        > div {
            width 50%
        }
    }
}

+isAbove(900px) {
    .flex-columns {
        > div {
            width 33%
        }
    }
}
.contributor-anchor:target {
    +address {
        //.dataset-key__contributors__name, .dataset-key__contributors__title {
        //    color $linkColor
        //}
        border 1px solid #ddd
        box-shadow 0 1px 2px 1px rgba(0,0,0,0.05)
    }
}

.dataset-key__contributors {
	&__mail, &__phone {
		overflow hidden
		text-overflow ellipsis
		white-space nowrap
		width 100%
		display inline-block
		height vrBlock(1)
		float left
	}
	&__mail {
		//color $linkColor
	}
	&__roles {
		font-style italic
	}

	address {
		padding ($halfGutter/2) $halfGutter
		margin 0
		width 100% //could be removed once the other dataset contact styling is adjusted
		>i {
			display inline-block
			width 1.3em
			margin-left -1.3em
			float left
		}
	}
	&__item {
		position relative
		>address, >i {
			position relative
		}
		>i {
			font-size 60px
			margin-right 20px
			float none
			position absolute
			color #ededed
			top 0
			right 0
		}
		&:hover {
			>i {
				color #cee3ff
			}
		}
	}
	&__columns {
		display flex
		flex-wrap wrap
		margin 0 -($halfGutter)
		>div {
			flex 0 1 auto
			width 33%
		}
	}
}
+isAbove($desktop) {
	.dataset-key__contributors {
		&__columns {
			> div {
				width 100px
			}
		}
	}
}


.flex-columns, .flex-columns-wide {
	margin auto
	display flex
	flex-wrap wrap
	>div {
		flex 0 1 auto
		width 100%
	}
	max-width $laptop
	>div {
		margin-top 10px
	}
}

+isAbove(400px) {
	.flex-columns, .flex-columns-wide {
		>div {
			width 50%
		}
	}
}

+isAbove(900px) {
	.flex-columns, .flex-columns-wide {
		>div {
			width 25%
		}
	}
}

+isAbove( $XL ) {
	.flex-columns-wide {
		margin auto
		max-width $XL
		>div {
			width 20%
		}
	}
}
.flex-columns, .flex-columns-wide {
	margin auto
	display flex
	flex-wrap wrap
	>div {
		flex 0 1 auto
		width 100%
	}
	max-width $laptop
	>div {
		margin-top 10px
	}
}

+isAbove(400px) {
	.flex-columns, .flex-columns-wide {
		>div {
			width 50%
		}
	}
}

+isAbove(900px) {
	.flex-columns, .flex-columns-wide {
		>div {
			width 25%
		}
	}
}

+isAbove( $XL ) {
	.flex-columns-wide {
		margin auto
		max-width $XL
		>div {
			width 20%
		}
	}
}
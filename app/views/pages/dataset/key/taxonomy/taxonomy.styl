#taxonomy-browser
    font-weight 300
    margin-top: 20px
    
    .paragraph-list li
        display inline
        margin-right 10px
    small.rank
        font-size 65%
    .search-link
        font-size 65%
        color #ccc;
    .parent
        margin-left 0px
    .current-name
        margin-top 6px
        margin-top 6px
        margin-left 10px
        font-weight 500
        text-decoration underline
    .synonym
        margin-left 20px
        .sciname
            font-style italic
    .taxonchild
        margin-left 20px
    a:hover
        text-decoration underline
    li
        margin-bottom 3px
        text-indent -25px
        padding-left 25px

#taxon-details
    text-align: center
    margin-bottom: 60px
    table tr td:first-child
        white-space: nowrap
        padding-right 20px
    .modified-date
        color #ccc
        font-size .85rem
        
$taxonomyWidth := 280px
.taxonomy-wrapper
    overflow visible
    .taxonomy
        padding 0 20px 0 0
        width $taxonomyWidth
        float left
        position relative
        
        a
            color: inherit;
    .taxonomy-content
        margin-left $taxonomyWidth
        width "calc(%s - 2 * %s)" % ($desktop $taxonomyWidth)

.search-results__list {
	&__item {
		border-bottom solid 1px #d9d9d9
		padding: 20px 0
		&:last-of-type {
			border none
		}
		&__tag {
			text-transform uppercase
			font-size 11px
			margin 0
			letter-spacing 0.05em
			>span {
				font-weight bold

			}
		}
		&__title {
			margin 2px 0 0 0
			display inline-block
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
			max-width 100%
			a {
				font-size 16px
				color inherit
				&:hover {
					color #337ab7
					text-decoration none
				}
			}
		}
		&__title--occurrence {
			max-width calc(100% - 138px)
		}
		&__subtitle {
			font-size 14px
			margin 0 0 4px
			//font-style italic
			font-weight normal
			//font-family $caslon
			color #63616d
		}
		&__meta {
			margin-bottom 0//5px
			color #9a9aa0 //inherit
			font-size 14px
			font-weight 300
			font-family $caslon
			font-style italic
			a {
				text-decoration underline
				color inherit
			}
		}
		>div {
			group()
			>a {
				margin-left 10px
				float right
			}
		}
		&__details {
			display none
		}
	}
	&__overview {
		border-bottom solid 1px #d9d9d9
	}
}

.search-results__list--short-list {
	.search-results__list__item {
		border none
	}
	&__header {
		text-align center
		h5 {
			display inline
		}
		span {
			padding-left 10px
		}
	}
	&__more {
		&:hover {
			text-decoration none
		}
		span {
			vertical-align middle
		}
	}
}
+isAbove($mobile) {
	.search-results__list--short-list {
		&__more {
			display none
		}
	}
	.search-results__list {
		&__item {
			&__title {
				a {
					font-size 18px
				}
			}
		}
	}
}
+isAbove($desktop+200px) {
	.search-results__list--short-list {
		.search-results__list__item:first-of-type {
			padding-top 0
		}
		&__header {
			width 200px
			position absolute
			left -200px
			top 5px
			text-align right
			padding-right 30px
			h5 {
				display block
				margin 0
			}
			span {
				padding-left 10px
			}
		}
	}
}
+isBelow($mobile) {
	.search-results__list {
		&__item {
			.tile .species-overview-map--small {
				width 64px
				height 32px
				>img {
					top -12px
				}
			}
			&__title{
				overflow visible
				white-space normal
				&--occurrence {
					    max-width calc(100% - 74px)
				}
			}
		}
	}
}

.chip {
	.chip__content{
		color white
	}
	display inline-block
	height 23px
	max-width 300px
	>a {
		display inline-block
		background-color #5a7888//#628292
		padding 3px 10px
		font-size 12px
		position relative
		max-width 100%
		color white
		overflow hidden
		text-overflow ellipsis
		white-space nowrap
		padding-right 25px
	}
	&__term {
		text-transform capitalize
		&:after {
			content ' : '
		}
	}
	.close {
		icon-x(12px, white, 1.2px)
		opacity 1
		top 5px
		right 5px
		position absolute
	}
}
.chip--double {
	@extends .chip
	>* {
		display inline-block
		float left
		margin 0 2px
	}
	>*:first-of-type {
		text-transform capitalize
		&:after {
			content ':'
		}
	}
	>*:nth-of-type(2) {
		max-width 200px
	}
}

.fit-suggestions + ul.dropdown-menu {
	max-width 100%
	border-radius 0
	a{
		overflow hidden
		text-overflow ellipsis
	}
}
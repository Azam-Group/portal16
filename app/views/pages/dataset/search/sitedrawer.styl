.drawer-padding {
	padding-right $filterDrawerWidth
}
.site-drawer {
	font-size 12px
	position relative
	&__header {
		background white
		position relative
		width 100%
		z-index 20
		overflow hidden
		height vrBlock(3)
		//box-shadow 0 1px 2px 0 rgba(0,0,0,.1)
		border-bottom 1px solid $stripeBorderColor
		&__action {
			display block
			line-height 50px
			font-size 30px
			margin 0 10px
			float left
			position relative
			z-index 25
			text-decoration none
			&:hover {
				text-decoration none
			}
		}
		&__close {
			float right
		}
		>div {
			text-align center
			position absolute
			top 0
			width 100%
			h4 {
				margin 7px 0 0 0
				font-size 16px
			}
			span {
				font-size 12px
				color lighten($blueTintedBlack, 30)
			}
		}
		.site-drawer__header__action {
			color lighten($blueTintedBlack, 30)
		}
	}

	&__search-bar {
		background white
		position relative
		border-bottom 1px solid $stripeBorderColor
		input {
			width calc(100% - 30px)
			background none
			border none
			margin 10px 0
			outline none
			padding 0 20px
		}
		button {
			position absolute
			right 0
			background none
			border none
			font-size 20px
			margin 5px 10px
		}
		.dropdown-menu {
			width 100%
			overflow hidden
			border-radius 0
			a {
				text-overflow ellipsis
				overflow hidden
			}
		}
	}


	&__section {
		&__content {
			padding 10px 20px
		}
	}

	&__facet-group {
		padding 10px 0
		border-bottom 1px solid $stripeBorderColor
		h5 {
			font-weight bold
			padding 0 20px
		}
		>div {
			a {
				display block
				padding 3px 20px
				&:hover {
					background $content_background
				}
			}
		}
		&__facet {
			color #677788
			&:after {
				//content ':'
			}
		}
		&__count {
			padding-left 5px
			color #c3c3c3
		}
	}
}

+isAbove($laptop) {
	.site-drawer {
		&__header {
			&__close {
				//display none
			}
		}
	}
}
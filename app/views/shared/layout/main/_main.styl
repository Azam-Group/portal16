#search {
	//position 0 simply to avoid reflows that could be expensive
	position absolute
	top 0
	z-index 10
	width 100%
	padding-top: 75px;
	display none
	background grey
	height 100%
	&:target {
		display block
		+ .main {
			left 100%
		}
	}
	.Search-content {
		overflow auto
		height: 100%;
		-webkit-overflow-scrolling: touch;
		overflow: auto;
	}
}

+isBelow(500px) {
	.contentArea__tabs {
		width 100%
		background pink
		height 30px
		overflow hidden
		ol {
			max-width 100%
			white-space: nowrap
			overflow hidden
			overflow-x auto
			height 54px
		}
		li {
			display inline-block
			padding 10px
			margin 0 5px
		}
	}
}

+isAbove(500px) {
	.contentArea__tabs {
		z-index 1
		background deepskyblue
		position absolute
		height 100%
		overflow auto
		overflow-x hidden
		width 85px
		ol {
			max-height 100%
		}
		li {
			width 75px
			display block
			height 100px
			background darksalmon
			margin 10px 0
		}
	}

	.contentArea__main {
		overflow auto
		height 100%
		padding-left 75px
		padding-left 85px
	}
}

//use sibling elements
.contentArea {
	right 0%
	transition: right 500ms ease;
}

main > aside {
	box-sizing border-box
	width 90%
	position absolute
	padding-top 75px
	top 0
	transition: right 500ms ease;
	height 100%
	right -20%
	background pink
	overflow hidden
	> div {
		height 100%
		background #333
		color #ddd
		overflow auto
		-webkit-overflow-scrolling touch
	}
	&:target {
		right 0%
		~ .contentArea {
			right 90%
		}
	}
}

+isAbove(500px) {
	main > aside {
		right initial
		left -200px
		width 200px
		transition: left 500ms ease;
		~ .contentArea {
			transition: left 500ms ease;
			left 0
		}
		&:target {
			right initial
			left 0
			~ .contentArea {
				right initial
				left 200px
			}
		}
		&.isLocked {
			z-index 10
			transition initial
			left 0
			~ .contentArea {
				padding-left 200px
			}
			&:target ~ .contentArea {
				left 0
			}
		}
	}
}






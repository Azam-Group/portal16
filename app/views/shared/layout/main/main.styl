body {
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	background $c_body
	height 100%
	overflow hidden
}
.page-wrapper {
	position relative
	height 100%
	overflow hidden
}

	header,.site_navbar .site_navbar-links {
		z-index 1000
	}
#main {
	height 100%
	z-index -10
	padding-top vr-block(3)
}
.main-content {
	overflow hidden
	overflow-y auto
	height 100%
	-webkit-overflow-scrolling touch
}

:focus {
	outline auto
}


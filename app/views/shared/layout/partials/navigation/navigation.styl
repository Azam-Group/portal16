//FILTERS

//use sibling elements

.site-drawer {
    z-index 100
    width $filterDrawerWidth
    max-width 100%
    position absolute
    top 0px
    //transition right 200ms ease;
    transition width 200ms ease;
    height 100% //"calc(100vh - %s)" % $navBar_height
    //right -($filterDrawerWidth + 3)
    right 0
    width 0
    overflow hidden
    .site-drawer__wrapper {
        width $filterDrawerWidth
    }
    .site-drawer__section {
        //height "calc(100vh - %s)" % vrBlock(6)
        height "calc(100vh - %s)" % vrBlock(4.5)
        overflow-y auto
        -webkit-overflow-scrolling touch
        //&--bottom-panel {
        //	height "calc(100vh - %s)" % vrBlock(8)
        //}
    }
    &.is-active {
        right 0
        width $filterDrawerWidth
    }
    &.site-drawer--wide {
        .site-drawer__wrapper {
            width $filterDrawerWidth + 10px
        }
        &.is-active {
            width $filterDrawerWidth + 10px
        }
    }
}

forceShowDrawer() {
    transition initial
    //right 0
    width $filterDrawerWidth
    overflow visible
    ~ .site-content {
        padding-right $filterDrawerWidth
    }
    //&:target ~ .site-content {
    //	right 0
    //}
}

+isAbove($laptop) {
    .site-drawer {
        //right -($filterDrawerWidth + 3)
        width 0
        position fixed
        top $navBar_height
        height "calc(100vh - %s)" % $navBar_height
        &.is-locked {
            forceShowDrawer()
        }
        //forceShowDrawer()
    }
    .site-content {
        transition none
        right 0
    }
}


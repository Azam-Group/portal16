//SEARCH
.card {
	box-shadow 0 0 1px rgba(0,0,0,0.3)
	background white
	margin vr-block(1)
}


//layout
.Search {
	position absolute
	top $navbar_height
	z-index 50
	width 100%
	height "calc(100% - %s)" % $navbar_height
	display none
	background $searchBg
	overflow hidden
	&.isActive {
		display block
		+ .main {
			visibility hidden
		}
	}
}

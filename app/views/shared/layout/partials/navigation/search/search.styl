//content
.Search__content{
	>.Search__form {
		width 90%
		margin vr-block(1) auto
		position relative
		input {
			width 100%
			height vr-block(2)
			border none
			box-sizing border-box
			padding-right vr-block(2)
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			background none
			color $Plum//$searchInputColor
			font-size vr-block(1)
			&:focus {
				outline none
			}
		}
		&:after {
			content ' '
			display block
			width 100%
			border-bottom 1px solid #ccc
		}
		button {
			outline none
			width vr-block(1)
			height 100%
			background none
			position absolute
			font-size vr-block(1.5)
			right vr-block(1)
			top 0%
			float right
			border none
			&:before {
				display block
			}
		}
	}
}

+isAbove($laptop) {
	.Search {
		overflow initial
		height auto
	}
	.Search__content {
		.Search__form {
			width 60%
		}
	}
}

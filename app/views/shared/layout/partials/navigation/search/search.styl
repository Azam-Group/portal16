//content
.search-content {
	.search-form {
		width 100%
		max-width $contentWidth--normal
		margin auto
		margin vrBlock(0.25) auto
		padding 0 vrBlock(1)
		position relative
		input {
			width 100%
			height vrBlock(2)
			border none
			box-sizing border-box
			padding-right vrBlock(2)
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			background none
			color $searchInputColor
			font-size vrBlock(1)
			&:focus {
				outline none
			}
		}
		//&:after {
		//	content ' '
		//	display block
		//	width 100%
		//	border-bottom 1px solid #ccc
		//}
		button {
			outline none
			width vrBlock(1)
			height 100%
			background none
			position absolute
			font-size vrBlock(1.5)
			right vrBlock(1)
			top 0%
			float right
			border none
			&:before {
				display block
			}
		}
	}
}

+isAbove($laptop) {
	.search {
		overflow initial
		height auto
	}
}

//SEARCH

//layout
.search {
	position absolute
	top $navBar_height
	z-index 50
	width 100%
	height "calc(100% - %s)" % $navBar_height
	display none
	background $searchBg
	overflow hidden
	&.is-active {
		display block
		+ .main {
			visibility hidden
		}
	}
}

//SEARCH

//layout
.Search {
	position absolute
	top $navbar_height
	z-index 50
	width 100%
	height "calc(100% - %s)" % $navbar_height
	display none
	background $searchBg
	overflow hidden
	&.is-active {
		display block
		+ .main {
			visibility hidden
		}
	}
}

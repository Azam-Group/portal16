<aside class="site-drawer" id="site-search">

    <div class="site-drawer__content" ng-controller="searchCtrl as omniSearch">

        <div class="site-drawer__section">

            <div class="search-bar filter-group">

                <form class="search-bar__term" ng-submit="omniSearch.updateSearch()">
                    <input type="text"
                           autocomplete="off"
                           id="siteSearch"
                           ng-model="omniSearch.freeTextQuery"
                           placeholder="Occurrences, species, news ...">
                    <a href="" type="submit" class="gb-icon-search search-bar__search" ng-click="omniSearch.updateSearch()">
                        <span class="sr-only">{$ __('stdTerms.search') $}</span>
                    </a>
                </form>

            </div>

            <div class="filter-group--links">
                <h5>
                    Filter by
                </h5>
                <div>
                    <a href="" ng-href="{$ gb.locales.urlPrefix $}/occurrence/search?q={{ omniSearch.freeTextQuery }}">
                        Occurrences
                    </a>
                    <a href="" ng-href="{$ gb.locales.urlPrefix $}/species/search?q={{ omniSearch.freeTextQuery }}">
                        Species
                    </a>
                    <a href="" ng-href="{$ gb.locales.urlPrefix $}/datasets/search?q={{ omniSearch.freeTextQuery }}">
                        Datasets
                    </a>
                    {% for type in ['news', 'data_use', 'programme', 'document', 'presentation', 'tool'] %}
                        <a href="" ng-href="{$ gb.locales.urlPrefix $}/cms/table?q={{ omniSearch.freeTextQuery }}&type={$ type $}" translate="cms.type.{$ type $}">
                            {$ type $}
                        </a>
                    {%  endfor %}
                </div>
            </div>

        </div>
    </div>

</aside>
.SiteHeader {
	siteHeaderbar()
	a {
		text-decoration none
		color inherit
		menuTextShadow()
	}

	.SiteHeader__mobileOptions {
		> div {
			width 33.33%
			display block
			float left
			&:nth-of-type(2) {
				text-align center
			}
			&:nth-of-type(3) {
				text-align right
			}
		}
	}
}

.isActive.site__searchToggle:before, .SiteHeader.isActive .site__menuToggle:before{
	content $icon-string-close_L
}
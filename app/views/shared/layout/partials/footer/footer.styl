.site-footer {
	.site-footer__upper {
		border-top 1px solid #dbe3e7
		color $discreetInk
		padding vrBlock(3) 0 vrBlock(2) 0
		margin-top vrBlock(8)
	}
	&__lower {
		color white
		border-top $navBar_borderWidth solid $navBar_borderColor
		background $navBar_background
	}
	ul {
		padding 0
	}
	&__social {
		text-align center
		li {
			padding vrBlock(0.5)
			display inline-block
		}
		a {
			background white
			border-radius 50%
			line-height vrBlock(3)
			text-align center
			display block
			width vrBlock(3)
			height vrBlock(3)
			font-size 30px
			color $olivine
			&:hover {
				text-decoration none
			}
		}
	}
}

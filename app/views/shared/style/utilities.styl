.scrollable-y {
    overflow-y auto
}

.uppercase-first::first-letter {
    text-transform uppercase
}

.overflow-hidden {
    overflow hidden
}

.no-break {
    break-inside avoid-column
}

.inline-block {
    display inline-block
}

//Hardly utilities, but created as such instead of modifiers - @Burke wouldn't it make better sense as modifiers?
.white-background {
    background-color $paper
}

.bare-background {
    background-color $greyBackground
}

.light-background {
    background-color $lightBackground
}

.lighter-background {
    background-color $lighterBackground
}

.alert-background {
    background-color $alertBackground
}

.horizontal-stripe--alternating-background {
    background-color $lightBackground
    &:nth-of-type(even) {
        background-color $paper
    }
}

.p-t-1 {
    padding-top vrBlock(1) !important
}

.p-t-05 {
    padding-top vrBlock(0.5) !important
}

.p-b-0 {
    padding-bottom 0 !important
}

.m-0 {
    margin 0 !important
}

.m-t-05 {
    margin-top vrBlock(.5) !important
}
.m-b-05 {
    margin-bottom vrBlock(.5) !important
}

for num in 0 1 2 3 {
    .m-t-{num} {
        margin-top vrBlock(num) !important
    }
    .m-r-{num} {
        margin-right vrBlock(num) !important
    }
    .m-b-{num} {
        margin-bottom vrBlock(num) !important
    }
    .m-l-{num} {
        margin-left vrBlock(num) !important
    }
}

+isAbove($laptop) {
    .hide-on-laptop {
        display none
    }
}
.scrollable-y {
    overflow-y auto
}

.fillHeight {
    height "calc(100vh - %s)" % $navBar_height
}

.center-block {
    display block
    margin-right auto
    margin-left auto
}

.whiteSpace-preLine {
    white-space pre-line
}

.uppercase-first::first-letter {
    text-transform uppercase
}

.overflow-hidden {
    overflow hidden
}

.no-break {
    break-inside avoid-column
}

.inline-block {
    display inline-block
}

//Hardly utilities, but created as such instead of modifiers - @Burke wouldn't it make better sense as modifiers?
.white-background {
    background-color $paper
}

.bare-background {
    background-color $greyBackground
}

.light-background {
    background-color $lightBackground
}

.lighter-background {
    background-color $lighterBackground
}

.alert-background {
    background-color $alertBackground
}

.horizontal-stripe--alternating-background {
    background-color $lightBackground
    &:nth-of-type(even) {
        background-color $paper
    }
}

.text-light {
    font-weight 300
}
.discreet {
    color $discreetInk
}
.text-error {
    color tomato
}

.p-t-0 {
    padding-top 0 !important
}

.p-t-1 {
    padding-top vrBlock(1) !important
}

.p-t-05 {
    padding-top vrBlock(0.5) !important
}

.p-b-0 {
    padding-bottom 0 !important
}

.p-b-05 {
    padding-bottom vrBlock(0.5) !important
}

.p-b-1 {
    padding-bottom vrBlock(1) !important
}

.p-0 {
    padding 0 !important
}

.p-l-05 {
    padding-left vrBlock(0.5) !important
}

.m-0 {
    margin 0 !important
}

.m-05 {
    margin vrBlock(.5) !important
}

.m-t-05 {
    margin-top vrBlock(.5) !important
}
.m-r-05 {
    margin-right vrBlock(.5) !important
}

.m-b-05 {
    margin-bottom vrBlock(.5) !important
}

.m-b-5 {
    margin-bottom vrBlock(5) !important
}

.invisible {
    visibility hidden
}

.underline {
    text-decoration underline
}

.hoverBox {
    transition box-shadow 200ms ease
    box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.16)
    &:hover {
        box-shadow 0 3px 8px 0 rgba(0, 0, 0, 0.16)
    }
}

for num in 0 1 2 3 {
    .m-t-{num} {
        margin-top vrBlock(num) !important
    }
    .m-r-{num} {
        margin-right vrBlock(num) !important
    }
    .m-b-{num} {
        margin-bottom vrBlock(num) !important
    }
    .m-l-{num} {
        margin-left vrBlock(num) !important
    }
}

+isAbove($laptop) {
    .hide-on-laptop {
        display none !important
    }
}
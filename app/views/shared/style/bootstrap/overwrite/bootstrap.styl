.form-control {
    border none
    border-radius 0
    box-shadow none
    border 1px solid #ddd
    transition border-color 500ms ease
    background transparent
    &:focus {
        border-color $color_accent
        outline none
        box-shadow none
    }
}

.btn.flat {
    border-radius 0
    border none
    background-color transparent
    text-transform uppercase
    color $linkColor
}

.btn.flat.disabled, .flat.btn[disabled], fieldset[disabled] .btn.flat {
    color #aaa
}


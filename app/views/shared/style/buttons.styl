.gb-button {
    border 1px solid #888
    line-height vrBlock(1)
    text-align center
    padding 3px 10px
    display inline-block
    text-decoration none
    color inherit
    &:hover {
        text-decoration none
    }
}

.gb-button--round {
    @extends .gb-button
    border-radius vrBlock(1)
}

.gb-button--flat {
    @extends .gb-button
    border none
    color $linkColor
}

.gb-button--primary {
    @extends .gb-button
    color white
    background #8ab9c1
    transition box-shadow 200ms ease, background 200ms ease
    box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.16)
    border none
    font-weight 500
    &:hover, &:focus {
        box-shadow 0 3px 8px 0 rgba(0, 0, 0, 0.16)
        background darken(#8ab9c1, 35)
        color white
    }
}

.gb-icon-button {
    background $linkColor
    box-shadow 0 1px 1px 1px rgba(0, 0, 0, 0.2)
    border-radius 50%
    height 30px
    width 30px
    line-height 30px
    display inline-block
    margin 0
    position relative
    top 4px
    color white
    font-size 20px
    transition background 300ms ease
    &:before {
        position relative
        top -1px;
    }
}

a:hover .gb-icon-button, .gb-icon-button:hover {
    background darken($linkColor, 20)
}

.gb-select {
    @extends .hoverBox
    position relative
    background white
    label {
        width 100%
        font-weight normal
        display block
        outline none
    }
    span {
        position absolute
        right 0
        top 0
        pointer-events none
        margin 6px
        font-size 18px
    }
    select {
        outline none
        border none
        background transparent
        padding 12px 20px
        appearance none
        width 100%
    }
}
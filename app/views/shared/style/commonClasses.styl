.wrapperHorizontalStripes {
    h5 {
        font-weight bold
    }
    > section {
        lost-utility: clearfix;
        padding 20px 0

        header {
            margin-bottom 10px
            h1 {
                font-size: 2.6em;
                line-height: 1.2em;
            }
        }
        .licences {
            .cc {
                font-size 30px
            }
        }
    }
    > section:nth-child(even) {
        background-color #f9f9f9
    }
    > section:nth-child(odd) {
        background-color #ffffff
    }
    > section.technical-information {
        background-color #ffffdf
    }
    .mapSection {
        height vr-block(25)
        padding 0 0
        a {
            color @gray-base
        }
    }
    .mapBlock {
        height 100%
    }

    > section.relatedNews {
        background-color #2D3C44
        color $gray-lighter
    }

    ul, ol {
        margin-bottom 1.5rem
    }
    .licences {
        text-align right
        img {
            float right
            width 50px
        }
    }
}
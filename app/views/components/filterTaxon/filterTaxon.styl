.filter-group--search {
	.dropdown-menu > li {
		.discreet {
			color #aaa
			font-weight 300
		}
		&.active {
			.discreet {
				color #8b9fa9
			}
		}
		> a {
			> div {
				white-space normal
			}
		}
	}
}

.species-list-item {
	&__name {
		white-space nowrap
		color #4d5258
	}
	.discreet {
		color #aaa
		font-weight 300
	}
	&.active {
		.discreet {
			color #8b9fa9
		}
	}
	> a {
		> div {
			white-space normal
		}
	}
}
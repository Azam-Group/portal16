$flexCardMarginTopBottom  = 20px
$flexCardSpacing  = 15px
$maxFlexCardWidth = ($laptop/3)
.card-flex-columns {
	display flex
	flex-wrap wrap
	justify-content center
	margin-bottom $flexCardMarginTopBottom
	margin-left ($flexCardSpacing/2)
	margin-right ($flexCardSpacing/2)
	>div {
		max-width $maxFlexCardWidth
		flex 1 1 auto
		padding 0 ($flexCardSpacing/2)
		margin-top $flexCardMarginTopBottom
		width 220px
	}
	.card-flex-columns__block-double {
		max-width ($maxFlexCardWidth*3)
	}
	.card-flex-columns__block-narrow {
		max-width ($maxFlexCardWidth)
	}
	.card-flex-columns__block-aligned {
		max-width 768px
	}
}




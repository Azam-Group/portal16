$mapControlBarWidth = 40px
gbmap {
    display block
    overflow hidden
    position relative
    z-index 10
    > div {
        width 100%
        height 100%
        .map-area {
            width 100%
            height 100%
        }
        .globe-context {
            position absolute
            top 0
            right $mapControlBarWidth
            z-index 10
            width 70px
            height 70px
        }
    }
    .gb-map-container {
        width 100%
        height 100%
        padding-right $mapControlBarWidth
        position relative
        z-index 5
    }
    .map-controls {
        width $mapControlBarWidth
        height 100%
        position absolute
        right 0
        top 0
        border-left 1px solid $stripeBorderColor
        z-index 30
        > a {
            display block
            width $mapControlBarWidth
            height $mapControlBarWidth
            text-align center
            line-height $mapControlBarWidth
            color #9b9fa5
            font-size ($mapControlBarWidth* 0.7)
            &.is-active {
                color $linkColor
                position relative
                // &:after {
                //     position absolute
                //     triangle 'left' 5px #9b9fa5
                //     left -5px
                //     top 10px
                //     content ' '
                // }
            }
        }
    }
    .map-controls-area {
        height 100%
        position absolute
        right $mapControlBarWidth
        top 0
        z-index 20
        background white
        border-left 1px solid $stripeBorderColor
        padding 15px
    }
    .time-slider__card {
        z-index 10
        position absolute
        bottom vrBlock(1)
        left vrBlock(1)
    }
    .leaflet-container {
        background #848a8e
    }
}
.mapWidget.fixedSizes {
    .mapWidget__mapWrapper {
        width 100%
        height 0
        padding-bottom 70%
        position relative
        .mapWidget__mapArea {
            position absolute
            top 0
            right 0
            left 0
            bottom 0
        }
    }
    &.isLarge {
        .mapWidget__mapWrapper {
            padding-bottom 50%
        }
    }
}


.occurrenceTaxonomy {
    //font-size 12px
    li>.title {
        background #f7f7f7
        border  1px solid #dcdcdc
        padding 2px
        display inline-block
        position relative
        margin-top -1px
        &:hover {
            background white
        }
        >div {
            display inline-block
            position absolute
            background $navBar_background_color
            height 3px
            bottom 0
            left 0
            z-index 1
            overflow hidden
        }
        >span {
            margin 0 2px
        }
    }
    ul {
        border-left 1px solid rgba(0,0,0,0.1)
        padding-left 10px
    }
    .occurrenceTaxonomy__root {
        padding 10px 0
        border none
    }
}